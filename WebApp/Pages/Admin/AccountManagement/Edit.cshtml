                <label asp-for="Account.IsActive" class="control-label"></label>
                <input asp-for="Account.IsActive" class="form-check" />
                <span asp-validation-for="Account.IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Role" class="control-label"></label>
                <input asp-for="Account.Role" class="form-control" readonly />
                <span asp-validation-for="Account.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
